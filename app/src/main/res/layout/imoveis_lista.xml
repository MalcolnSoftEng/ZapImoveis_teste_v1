<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="3dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/imgImovel"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_marginTop="2dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/background_lista"
            android:padding="2dp">

            <TextView
                android:id="@+id/txtTipoImovel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="2dp"
                android:layout_marginTop="-2dp"
                android:fontFamily="sans-serif"
                android:text="Tipo Imovel"
                android:background="@drawable/background_labels"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="14sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtEndereco"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/background_labels"
                android:layout_marginLeft="6dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Preco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:text="R$"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtPreco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/txtEndereco"
                    android:layout_marginLeft="1dp"
                    android:layout_toEndOf="@+id/Preco"
                    android:layout_toRightOf="@+id/Preco"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:text="Preço"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="14sp" />

            </LinearLayout>
            <TextView
                android:id="@+id/txtEndereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout"
                android:background="@drawable/background_labels"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="6dp"
                android:fontFamily="sans-serif"
                android:text="Endereço"
                android:textColor="#fff"
                android:textSize="10sp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtSubTipoOferta"
                android:background="@drawable/background_labels"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDormitorios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"

                    android:text="Dormitorios"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="10sp" />
                <android.support.v4.widget.Space
                    android:layout_width="2dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/txtSuites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"

                    android:text="Suites"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="10sp" />
                <android.support.v4.widget.Space
                    android:layout_width="2dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/txtVagas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Vagas"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="10sp" />
                <android.support.v4.widget.Space
                    android:layout_width="2dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/txtAreaUtil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="AreaUtil"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="10sp"/>
                <android.support.v4.widget.Space
                    android:layout_width="2dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/txtAreaTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="AreaTotal"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="10sp"  />
            </LinearLayout>

            <TextView
                android:id="@+id/txtSubTipoOferta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="sans-serif"
                android:text="ESTADO"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_action_star" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/imageButton"
            android:layout_toStartOf="@+id/imageButton">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_myplaces" />
            <TextView
                android:id="@+id/txtDist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="000"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
